# ------------------------------
# FinVista Backend - .env.example
# ------------------------------
# Copy this file to backend/.env and fill real secrets before running the app.
# DO NOT commit real secrets to git.

# MongoDB connection string (example: mongodb://user:pass@host:port/db)
MONGO_URL="mongodb://<username>:<password>@<host>:<port>/<database>"

# JWT secret used to sign access tokens (keep long & random)
JWT_KEY="your-jwt-secret-here"

# Argon2 / bcrypt salt rounds (optional)
PASSWORD_HASH_ROUNDS=10

# Cloudinary URL for receipt storage (or S3 config if using S3)
CLOUDINARY_URL="cloudinary://<api_key>:<api_secret>@<cloud_name>"

# Google Vision / Gemini API key (for OCR and AI features)
GOOGLE_VISION_KEY="your-google-vision-or-gemini-key"

# Razorpay keys for payments (test keys in dev)
RAZORPAY_KEY_ID="rzp_test_xxx"
RAZORPAY_KEY_SECRET="rzp_test_secret_xxx"
RAZORPAY_WEBHOOK_SECRET="razorpay_webhook_secret_here"

# SMTP for emails (Nodemailer)
SMTP_HOST="smtp.example.com"
SMTP_PORT=587
SMTP_USER="user@example.com"
SMTP_PASS="smtp-password"

# Redis URL (optional; used for queues / sessions)
REDIS_URL="redis://:<password>@<host>:<port>"

# App settings
PORT=5000
NODE_ENV=development

# Optional: third-party API toggles
ENABLE_OCR=true
ENABLE_PAYMENTS=true
