# ------------------------------
# FinVista Frontend - .env.example
# ------------------------------
# Copy to frontend/.env.local (do not commit secrets)

# Backend API URL used by the frontend during dev
VITE_BACKEND_URL="http://localhost:5000"

# Google OAuth Client ID for login (if enabled)
VITE_GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"

# Feature toggles
VITE_ENABLE_PAYMENTS=true
VITE_ENABLE_OCR=true

# App env
VITE_APP_TITLE="FinVista"
